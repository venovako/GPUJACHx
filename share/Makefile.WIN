!IFNDEF RM
RM=del /F
!ENDIF # !RM

!IFNDEF MSVC_VERSION
MSVC_VERSION=2017
!ENDIF # !MSVC_VERSION

!IFNDEF NVCC
NVCC=nvcc.exe
!ENDIF # !NVCC

!IFNDEF GPU_ARCH
GPU_ARCH=30
!ENDIF # !GPU_ARCH

!IFNDEF STD
STD=11
!ENDIF # !STD

!IFNDEF HDF5
HDF5=C:\HDF5
!ENDIF # !HDF5

HDF5_I=-I$(HDF5)\include
HDF5_L=-L$(HDF5)\lib
HDF5_l=-l libhdf5_hl,libhdf5

NVPPFLAGS=-I. -I..\share $(HDF5_I) -DUSE_RSQRT #-DUSE_DRMAC
NVCCFLAGS=--cl-version $(MSVC_VERSION) -std c++$(STD) -arch sm_$(GPU_ARCH) -restrict -res-usage -Xcompiler /EHsc,/favor:INTEL64,/fp:precise,/GF,/GR,/GS-,/GT,/MD
NVLDFLAGS=$(HDF5_L) $(HDF5_l)

!IFDEF NDEBUG
NVPPFLAGS=$(NVPPFLAGS) -DNDEBUG
NVCCFLAGS=$(NVCCFLAGS) -O$(NDEBUG)
!ELSE # debug
NVPPFLAGS=$(NVPPFLAGS) -UNDEBUG
NVCCFLAGS=$(NVCCFLAGS) -O0 -g -G -src-in-ptx -Xptxas -no-bb-merge,-ret-end
!ENDIF # NDEBUG

